apiVersion: networking.istio.io/v1beta1
kind: Gateway
metadata:
  annotations:
  name: {{name}}
  namespace: {{space}}
spec:
  selector:
    istio: gateway
  servers:
  - hosts:
    - '*'
    port:
      name: https
      number: {{target_port}}
      protocol: HTTPS
    tls:
      credentialName: istio-ingress
      mode: SIMPLE

